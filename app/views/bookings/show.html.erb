<div class="container">
  <h1>Messages</h1>
  <h2>
    <%= pluralize @booking.messages.size, "messages" %>
  </h2>

  <div id="messages">
    <% if @booking.messages.blank? %>
      Be the first to send a message for this booking.
    <% else %>
      <% @booking.messages.each do |message| %>
        <%= render 'messages/show', message: message %>
      <% end %>
    <% end %>
  </div>
  <%= render 'messages/form', message: @message %>
</div>
