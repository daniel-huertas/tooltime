<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <h1 class="text-center">Messages</h1>
      <div id="messages">
        <p><strong>Borrowing Request From: </strong><%= @booking.user.first_name %></p>
        <p><blockquote><%= @booking.message %></blockquote></p>
        <% if @booking.messages.blank? %>
          <p>Continue the conversation?</p>
        <% else %>
          <% @booking.messages.each do |message| %>
            <%= render 'messages/show', message: message %>
          <% end %>
        <% end %>
      </div>
      <%= render 'messages/form', message: @message %>
    </div>
  </div>
</div>
