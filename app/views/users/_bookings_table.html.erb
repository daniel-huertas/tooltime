<table class="table table-striped">
  <thead>
    <tr>
      <th>Location</th>
      <th>Begin Date</th>
      <th>End Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= booking.tool.location %></td>
      <td><%= booking.date_begin %></td>
      <td><%= booking.date_end %></td>
      <% if booking.accepted? %>
      <td><i class="fa fa-check"></i></td>
      <% elsif booking.accepted == false %>
      <td><i class="fa fa-times"></i></td>
      <% else %>
      <td><i class="fa fa-hourglass-half"></i></td>
      <% end %>
    </tr>
  </tbody>
</table>
