<div class="container">

  <% @bookings.each do |booking| %>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <table class="table table-striped">
        <thead>
            <tr>
              <th>Booking ID</th>
              <th>Location</th>
              <th>Begin Date</th>
              <th>End Date</th>
              <th>Accepted?</th>
            </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= booking.id %></td>
            <td><%= booking.tool.location %></td>
            <td><%= booking.date_begin %></td>
            <td><%= booking.date_end %></td>
            <% if booking.accepted? %>
              <td>Yes </td>
              <td class="fa fa-check"></td>
            <% else %>
              <td>Pending... </td>
              <td class="fa fa-hourglass-half "></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.7)), url('<%= image_path("https://www.placecage.com/g/300/400") %>');">
        <div class="card-category">
          <%= booking.tool.category %>
        </div>
        <div class="card-description">
          <%= booking.tool.name %>
          <%= booking.tool.photo %>
        </div>
      </div>
    </div>
  </div>

  <% end %>

</div>
