<div class="container">

  <% @bookings.each do |booking| %>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <table class="table table-striped">
        <thead>
            <tr>
              <th>Location</th>
              <th>Begin Date</th>
              <th>End Date</th>
              <th>Accepted?</th>
            </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= booking.tool.location %></td>
            <td><%= booking.date_begin %></td>
            <td><%= booking.date_end %></td>
            <% if booking.accepted? %>
              <td>Yes <i class="fa fa-check"></i></td>
            <% else %>
              <td>Pending <i class="fa fa-hourglass-half"></i></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.7)), url('<%= card_photo?(booking.tool) %>');">
        <div class="card-category">
          <%= category_icon(booking.tool) %>
          <p><%= booking.tool.category %></p>
        </div>
        <div class="card-description">
          <h1><%= cutoff_text(booking.tool.name) %></h1>
          <p><%= cutoff_text(booking.tool.description) %></p>
        </div>
        <div class="card-user">
          <%= image_tag("earth-globe.png") %>
          <p><%= cutoff_text(booking.tool.location) %></p>
        </div>
      </div>
    </div>
  </div>

  <% end %>

</div>


